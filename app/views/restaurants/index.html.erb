<div class="container">
  <div class="row">
    <h1 class='col-6'>Our Restaurants</h1>
  </div>
  <div class="row">
    <ul class='list-group col-6'>
      <% @restaurants.each do |restaurant| %>
      <li class='list-group-item'><%= link_to restaurant.name, restaurant_path(restaurant) %></li>
      <% end %>
    </ul>
  </div>
</div>
